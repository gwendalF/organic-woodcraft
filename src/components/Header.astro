---
import { Image } from "astro:assets";
import logo from "./logo.png";
---

<header class="bg-gray-900 text-white p-4 top-0 shadow-md sticky">
  <div class="flex items-center justify-between max-w-7xl mx-auto">
    <div class="text-xl font-bold flex items-center space-x-2">
      <Image
        src={logo}
        alt="Logo"
        class="w-14 h-14"
        width={56}
        height={56}
        loading="eager"
      />
      <div>Organic Woodcraft</div>
    </div>

    <input type="checkbox" id="menu-toggle" class="peer hidden" />
    <label
      for="menu-toggle"
      class="text-3xl cursor-pointer md:hidden peer-checked:text-gray-300"
    >
      ☰
    </label>

    <nav
      class="absolute top-full left-0 w-full bg-gray-900 flex-col gap-4 px-4 py-4 hidden peer-checked:flex md:static md:flex md:flex-row md:w-auto md:gap-6 md:px-0 md:py-0"
    >
      <a href="/furnitures" class="block md:inline hover:text-gray-300"
        >Mobilier sur mesure</a
      >
      <a href="/gifts" class="block md:inline hover:text-gray-300"
        >Idées cadeau</a
      >
      <a href="/woods" class="block md:inline hover:text-gray-300"
        >Essences de bois</a
      >
      <a href="/showroom" class="block md:inline hover:text-gray-300"
        >Showroom</a
      >
    </nav>
  </div>
</header>
