---
const space = 10,
  width = 1000,
  height = 40,
  triangleWidth = Math.round((Math.sqrt(3) / 2) * height),
  middleWidth = 2 * space + triangleWidth,
  firstLineEnd = (width - middleWidth) / 2,
  firstTriangleX1 = firstLineEnd + space,
  firstTriangleX2 = firstTriangleX1 + triangleWidth,
  secondTriangleX1 = firstTriangleX1 + triangleWidth / 3,
  secondTriangleX2 = secondTriangleX1 + triangleWidth,
  props: astroHTML.JSX.SVGAttributes = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  viewBox={`0 0 ${width} ${height}`}
  width="100%"
  height="100%"
  preserveAspectRatio="xMidYMid"
  {...props}>
  <line
    x1="0"
    y1={height / 2}
    x2={firstLineEnd}
    y2={height / 2}
    stroke="currentColor"
    stroke-width="2"></line>

  <polygon
    points={`
    ${firstTriangleX1},0
    ${firstTriangleX1},${height}
    ${firstTriangleX2},${height / 2}`}
    fill="none"
    stroke="currentColor"
    stroke-width="2"></polygon>

  <polygon
    points={`${secondTriangleX1},${height / 2} ${secondTriangleX2},0 ${secondTriangleX2},${height}`}
    fill="none"
    stroke="currentColor"
    stroke-width="2"></polygon>

  <line
    x1={`${secondTriangleX2 + space}`}
    y1={height / 2}
    x2={width}
    y2={height / 2}
    stroke="currentColor"
    stroke-width="2"></line>
</svg>
